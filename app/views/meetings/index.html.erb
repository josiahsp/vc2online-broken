<p id="notice"><%= notice %></p>

<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Campus</th>
      <th>Title</th>
      <th>Weekday</th>
      <th>Time</th>
      <th>Display in Locations Partial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.location.title.titlecase %></td>
        <td><%= meeting.service.title.titlecase %></td>
        <td><%= Date::DAYNAMES[meeting.weekday].titlecase %></td>
        <td><%= meeting.time.strftime("%I:%M %p") %></td>
        <td><%= meeting.level == 1 ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

