<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Subtitle:</strong>
  <%= @event.subtitle %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @event.synopsis %>
</p>

<p>
  <strong>Content:</strong>
  <%= simple_format(@event.content) %>
</p>

<p>
  <strong>Location:</strong>
  <% if @event.location_id %>
    <%= @event.location.title %>
  <% end %>
</p>

<p>
  <strong>Location building:</strong>
  <%= @event.location_building %>
</p>

<p>
  <strong>Location address:</strong>
  <%= @event.location_address %>
</p>

<p>
  <strong>Location address2:</strong>
  <%= @event.location_address2 %>
</p>

<p>
  <strong>Location city:</strong>
  <%= @event.location_city %>
</p>

<p>
  <strong>Location state:</strong>
  <%= @event.location_state %>
</p>

<p>
  <strong>Location zip:</strong>
  <%= @event.location_zip %>
</p>

<p>
  <strong>Location googlemapsid:</strong>
  <%= @event.location_googlemapsid %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.start.strftime("%e %b %Y %H:%M%p") %>
  <% if @event.start != @event.endtime && @event.start.day == @event.endtime.day %>
  - <%= @event.endtime.strftime("%H:%M%p") %>
  <% elsif @event.start != @event.endtime && @event.start.day != @event.endtime.day %>
  - <%= @event.endtime.strftime("%e %b %Y %H:%M%p") %>
  <% end %>
</p>

<p>
  <strong>Videos:</strong>
  <%= @event.videos_id %>
</p>

<p>
  <strong>Images:</strong>
  <%= @event.images_id %>
</p>

<p>
  <strong>Links:</strong>
  <%= @event.links_id %>
</p>

<% if @event.price > 0 %>
<p>
  <strong>Price:</strong>
  <%= number_to_currency(@event.price, unit: "$") %>
</p>

<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
